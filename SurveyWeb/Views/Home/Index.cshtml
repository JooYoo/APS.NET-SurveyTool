@model IEnumerable<SurveyWeb.Models.User>
@{
    ViewData["Title"] = "Home Page";
}

@using (Html.BeginForm())
{
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-md-3">
                <div>tester@mail.com</div>
                <div>1</div>
            </div>
            <div class="col-md-6 ">
                <div id="login-card" class="card row justify-content-center align-items-center shadow-lg p-3 mb-5 bg-white">
                    <div class="card-body ">
                        @*Title*@
                        <h4 class="card-title text-center mb-4 mt-1">Login</h4>
                        <hr style="margin-bottom: 40px; margin-top: 40px">
                        <p class="text-success text-center"> </p>

                        @*Account*@
                        <div class="form-group">
                            <input id="AccountTx" name="accountTx" class="form-control" style="width:300px" placeholder="Account" type="email" style="width: 200px">
                        </div> <!-- form-group// -->
                        @*Password*@
                        <div class="form-group">
                            <input id="PasswordTx" name="passwordTx" class="form-control" style="width:300px" placeholder="******" type="password">
                        </div> <!-- form-group// -->
                        @*LoginResult*@
                        <div style="margin-top: 0px;">
                            @{
                                if (ViewData["isOk"]== null)
                                {
                                    <div id="ValidatorTx" class="alert alert-danger" role="alert" style="display: none;"></div>
                                }
                                else if (ViewData["isOk"].ToString().ToLower() == "false")
                                {
                                    <div id="ValidatorTx" class="alert alert-danger" role="alert">
                                        Failed
                                    </div>
                                }
                                else
                                {
                                    <div id="ValidatorTx" class="alert alert-success" role="alert">
                                        Success
                                    </div>
                                }
                            }
                        </div>

                        @*<div class="form-group">
                                <label>
                                    <input type="checkbox" name="remember"> Remember Me
                                </label>
                            </div>*@

                        <div class="form-group col-12">
                            <button id="SubmitBtn" type="submit" name="postAction" class="btn btn-primary btn-block" style="width: 250px; margin-top: 60px "> Login </button>
                        </div> <!-- form-group// -->

                        <p class="text-center"><a href="#" class="btn">Forgot password?</a></p>
                    </div>
                </div> <!-- card.// -->
            </div>
            <div class="col-md-3">
                @*right side*@
            </div>
        </div>
    </div>
}



